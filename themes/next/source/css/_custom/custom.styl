// 主页文章添加阴影效果
.post {
  margin-top: 10px;
  margin-bottom: 10px;
  padding: 5px;
  background-color: rgba(255, 255, 255, 0.5);
  -webkit-box-shadow: 0 0 5px rgba(255, 255, 255, 1);
  -moz-box-shadow: 0 0 5px rgba(255, 255, 255, 0.7);
}